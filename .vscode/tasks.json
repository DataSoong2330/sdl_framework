{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build sdl_framework",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/source/*.cpp",
                "-o",
                "${workspaceFolder}/sdl_framework.exe",
                "-lSDL2",
                "-lSDL2_gfx",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_net",
                "-lSDL2_ttf"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}